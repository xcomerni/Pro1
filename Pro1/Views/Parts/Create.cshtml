@model Pro1.Models.Parts

@{
    ViewData["Title"] = "Add Part";
}

<h2>Add Part to Ticket</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="TicketId" /> <!-- Ensure TicketId is included -->

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation errors -->
    </div>

    <div class="form-group">
        <label asp-for="unitPrice" class="control-label"></label>
        <input asp-for="unitPrice" type="number" step="0.01" class="form-control" /> <!-- Decimal input for unitPrice -->
        <span asp-validation-for="unitPrice" class="text-danger"></span> <!-- Validation errors -->
    </div>

    <div class="form-group">
        <label asp-for="amount" class="control-label"></label>
        <input asp-for="amount" type="number" class="form-control" /> <!-- Integer input for amount -->
        <span asp-validation-for="amount" class="text-danger"></span> <!-- Validation errors -->
    </div>

    <button type="submit" class="btn btn-primary">Add Part</button> <!-- Submit button -->
</form>

<div>
    <a asp-action="Details" asp-controller="Tickets" asp-route-id="@Model.TicketId">Back to Ticket Details</a> <!-- Back to ticket details -->
</div>
