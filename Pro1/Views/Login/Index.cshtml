@model Pro1.Models.Login

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Displays model validation errors -->
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" /> <!-- Correctly binds to Username -->
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" /> <!-- Correctly binds to Password -->
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>