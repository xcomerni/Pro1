@model IEnumerable<Pro1.Models.Callendar>

@{
    ViewData["Title"] = "My Callendar";
}

<h2>My Callendar</h2>

@if (Model == null || !Model.Any())
{
    <p>No events scheduled.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Date)</th>
                <th>@Html.DisplayNameFor(m => m.Hour)</th>
                <th>@Html.DisplayNameFor(m => m.TicketId)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var callendar in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => callendar.Date)</td>
                    <td>@Html.DisplayFor(m => callendar.Hour)</td>
                    <td>@Html.DisplayFor(m => callendar.TicketId)</td> <!-- You could also include ticket details if needed -->
                </tr>
            }
        </tbody>
    </table>
}
