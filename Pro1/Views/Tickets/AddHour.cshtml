@model Pro1.Models.Callendar

@{
    ViewData["Title"] = "Add Hour";
}

<h2>Add Hour to Ticket</h2>

<form asp-action="AddHour" method="post">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- Display validation errors -->
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" /> <!-- Date input -->
    </div>
    <div class="form-group">
        <label asp-for="Hour"></label>
        <input asp-for="Hour" type="number" class="form-control" min="0" max="23" /> <!-- Hour input -->
    </div>
    <input type="hidden" asp-for="TicketId" /> <!-- Hidden input for TicketId -->
    <input type="hidden" asp-for="EmployeeId" /> <!-- Hidden input for EmployeeId -->
    <button type="submit" class="btn btn-primary">Add Hour</button>
</form>